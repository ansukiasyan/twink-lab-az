resource "azurerm_public_ip" "vm21" {
  name                = "vm21"
  location            = azurerm_resource_group.prod.location
  resource_group_name = azurerm_resource_group.prod.name
  allocation_method   = "Static"
}

output "vm21_public_ip" {
  value = azurerm_public_ip.vm21.ip_address
}

resource "azurerm_network_interface" "vm21" {
  name                = "vm21"
  location            = azurerm_resource_group.prod.location
  resource_group_name = azurerm_resource_group.prod.name

  ip_configuration {
    name                          = "vm21"
    subnet_id                     = azurerm_subnet.servers.id
    private_ip_address_allocation = "Static"
    private_ip_address            = "10.81.10.21"
    public_ip_address_id          = azurerm_public_ip.vm21.id
  }
}

resource "azurerm_virtual_machine" "vm21" {
  name                  = "vm21"
  location              = azurerm_resource_group.prod.location
  resource_group_name   = azurerm_resource_group.prod.name
  network_interface_ids = [azurerm_network_interface.vm21.id]
  vm_size               = "Standard_A2_v2"

  delete_os_disk_on_termination    = true
  delete_data_disks_on_termination = true

  storage_image_reference {
    publisher = "OpenLogic"
    offer     = "CentOS"
    sku       = "7.7"
    version   = "latest"
  }
  storage_os_disk {
    name              = "vm21_os"
    caching           = "ReadWrite"
    create_option     = "FromImage"
    managed_disk_type = "Standard_LRS"
  }
  os_profile {
    computer_name  = "prod-vm21"
    admin_username = "prodadmin"
  }
  os_profile_linux_config {
    disable_password_authentication = true
    ssh_keys {
      path     = "/home/prodadmin/.ssh/authorized_keys"
      key_data = "ssh-rsa  "
    }
  }
}

